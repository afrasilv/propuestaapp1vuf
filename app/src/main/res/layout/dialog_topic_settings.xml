<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/dialog_settings_subject_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="170dp"
        android:layout_gravity="center">
        <Button
            style="@style/BackButton"
            android:id="@+id/backToSubject"
            android:text="Tema"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"></Button>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editNameTopic"
            android:text="Modificar Nombre Tema"
            android:layout_below="@+id/backToSubject"></Button>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteTopic"
            android:text="Borrar Tema"
            android:layout_alignParentBottom="true"></Button>
    </RelativeLayout>
</RelativeLayout>
